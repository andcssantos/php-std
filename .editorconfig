# ---------------------------------------------------
# EditorConfig is awesome: https://EditorConfig.org
# ---------------------------------------------------
root = true

# ---------------------------------------------------
# General
# ---------------------------------------------------
[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = false

# ---------------------------------------------------
# PHP
# ---------------------------------------------------
[*.php]
indent_style = space
indent_size = 4
max_line_length = 120
insert_final_newline = false

# ---------------------------------------------------
# JavaScript
# ---------------------------------------------------
[*.js]
indent_style = space
indent_size = 2
max_line_length = 80
insert_final_newline = true

# ---------------------------------------------------
# HTML
# ---------------------------------------------------
[*.html]
indent_style = space
indent_size = 2
max_line_length = 120
insert_final_newline = true

# ---------------------------------------------------
# CSS
# ---------------------------------------------------
[*.css]
indent_style = space
indent_size = 2
max_line_length = 80
insert_final_newline = true

# ---------------------------------------------------
# SQL
# ---------------------------------------------------
[*.sql]
indent_style = space
indent_size = 2
max_line_length = 80
insert_final_newline = true
